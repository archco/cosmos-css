//- sass components page
extends ./layout/layout.pug

block title
  title= 'sass components page'

block append content
  div(class='row')
    aside(class='col-2')
      ul(class='fixed')
        li
          a(href='#scaffolding') Scaffolding
        li
          a(href='#button') Button
        li
          a(href='#card') Card
        li
          a(href='#form') Form
        li
          a(href='#grid') Grid
        li
          a(href='#helper') Helper
        li
          a(href='#pagination') Pagination
    section(class='col-10')
      p tooltip test: <span class="tooltip" aria-label="default tooltip">tooltip</span> is here!
      p 
        |<span class="tooltip tooltip-top" aria-label="default tooltip">tooltip</span>
        |<span class="tooltip tooltip-bottom" aria-label="default tooltip">tooltip</span>
        |<span class="tooltip tooltip-left" aria-label="default tooltip">tooltip</span>
        |<span class="tooltip tooltip-right" aria-label="default tooltip">tooltip</span>
      h1(id='scaffolding') Scaffolding
      hr
      include includes/scaffolding.pug
      h1(id='button') Button
      hr
      include includes/button.pug
      h1(id='card') Card
      hr
      include includes/card.pug
      h1(id='form') Form
      hr
      include includes/form.pug
      h1(id='grid') Grid
      hr
      include includes/grid.pug
      h1(id='helper') Helper
      hr
      include includes/helper.pug
      h1(id='pagination') Pagination
      hr
      include includes/pagination.pug
  