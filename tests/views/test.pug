          p(class='pad')= lorem
      li
        div(class='accordion-head') List item 2
        div(class='accordion-body')
          p(class='pad')= lorem
      li
        div(class='accordion-head') List item 3
        div(class='accordion-body')
          p(class='pad')= lorem
