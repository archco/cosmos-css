				p col-md-6
	h2 Desktop Grid
	div(class='container')
		div(class='row')
			div(class='col-lg-3 col-md-6 bg-color-secondary')
				p col-lg-6
			div(class='col-lg-3 col-md-6 bg-color-primary')
				p col-lg-6
			div(class='col-lg-3 col-md-6 bg-color-secondary')
