block content
	h1 Grid
	hr
	h2 Defualt Grid
	div(class='row')
		div(class='col-1 box-line bg-color-primary') col-1
		div(class='col-1 box-line bg-color-primary') col-1
		div(class='col-1 box-line bg-color-primary') col-1
		div(class='col-1 box-line bg-color-primary') col-1
