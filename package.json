{
  "name": "cosmos-css",
  "version": "0.7.0",
  "description": "personal practice css framework.",
  "main": "dist/js/script.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "concurrently": "^3.3.0",
    "eslint": "^3.12.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.0",
    "gulp-eslint": "^3.0.1",
    "gulp-pug": "^3.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^2.3.2",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-uglify": "^2.0.0",
    "jquery": "^3.1.1",
    "node-sass": "^4.5.0",
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "build": "npm run sass && npm run pug && npm run webpack",
    "watch": "node node_modules/concurrently/src/main \"npm run sass:watch\" \"npm run pug:watch\" \"npm run webpack:watch\"",
    "production": "npm run sass:min && npm run webpack:min",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node node_modules/node-sass/bin/node-sass --source-map true src/cosmos/sass/style.scss dist/css/style.css",
    "sass:min": "node node_modules/node-sass/bin/node-sass --output-style compressed src/cosmos/sass/style.scss dist/css/style.min.css",
    "sass:watch": "npm run sass && npm run sass -- --watch",
    "pug": "node node_modules/pug-cli --pretty tests/views/test.pug tests/views/components.pug tests/views/modules.pug --out ./tests/",
    "pug:watch": "npm run pug -- --watch",
    "webpack": "node node_modules/webpack/bin/webpack",
    "webpack:watch": "npm run webpack && npm run webpack -- --watch",
    "webpack:min": "npm run webpack -- --optimize-minimize --output-filename bundle.min.js --devtool false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archco/cosmos-css.git"
  },
  "author": "archco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/archco/cosmos-css/issues"
  },
  "homepage": "https://github.com/archco/cosmos-css#readme"
}
